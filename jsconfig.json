{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    // The product does not eliminate annotations
    "removeComments": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": [],
    "types": [],
    "paths": {
      "@ptahjs/*": [
        "src",
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}